{
  "name": "shell-formatter-vscode",
  "version": "0.1.0-alpha.1",
  "description": "A formatter for shell scripts, Dockerfile, gitignore, dotenv, /etc/hosts, jvmoptions, and other file types",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "check:biome": "biome check --no-errors-on-unmatched --write .",
    "check:type": "tsc",
    "postinstall": "lefthook install"
  },
  "keywords": [
    "formatter",
    "shellscript"
  ],
  "author": {
    "email": "whoeverimf5@gmail.com",
    "name": "Ryo",
    "url": "https://github.com/xqvvu"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "es-toolkit": "^1.44.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.13",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "3.7.1",
    "lefthook": "^2.1.1",
    "ovsx": "0.10.9",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
