{
  "name": "shell-tidy-vscode",
  "displayName": "Shell Tidy",
  "publisher": "xqvvu",
  "version": "1.0.0",
  "description": "Format shell and shell-like command text files with shfmt",
  "main": "dist/index.cjs",
  "type": "module",
  "categories": [
    "Formatters"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onLanguage:shellscript",
    "onLanguage:dotenv",
    "onLanguage:dockerfile",
    "onLanguage:ignore",
    "onLanguage:hosts",
    "onLanguage:jvmoptions",
    "onLanguage:properties",
    "onLanguage:spring-boot-properties",
    "onLanguage:azcli",
    "onLanguage:bats"
  ],
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "keywords": [
    "formatter",
    "shell",
    "docker",
    "shellscript",
    "format",
    "bash",
    "dockerfile",
    "properties",
    "formatter",
    "beautify",
    "dotenv",
    "hosts",
    "jvmoptions",
    "vmoptions",
    "bashrc",
    "zshrc",
    "azcli",
    "azure cli tool",
    "bats"
  ],
  "contributes": {
    "commands": [
      {
        "command": "shellFormatter.downloadShfmt",
        "title": "Shell Tidy: Download shfmt"
      },
      {
        "command": "shellFormatter.showShfmtInfo",
        "title": "Shell Tidy: Show shfmt Info"
      }
    ],
    "languages": [
      {
        "id": "shellscript"
      },
      {
        "id": "dockerfile",
        "aliases": [
          "docker",
          "Dockerfile"
        ],
        "filenamePatterns": [
          "Dockerfile",
          "Dockerfile.*",
          "*.dockerfile"
        ]
      },
      {
        "id": "ignore",
        "aliases": [
          "gitignore",
          "dockerignore"
        ],
        "filenames": [
          ".dockerignore",
          ".gitignore"
        ]
      },
      {
        "id": "dotenv",
        "aliases": [
          "env"
        ],
        "filenamePatterns": [
          ".env.*"
        ],
        "filenames": [
          "env",
          ".env"
        ]
      },
      {
        "id": "jvmoptions",
        "aliases": [
          "vmoptions"
        ],
        "extensions": [
          ".vmoptions"
        ],
        "filenames": [
          "jvm.options"
        ]
      },
      {
        "id": "hosts",
        "filenames": [
          "hosts"
        ]
      },
      {
        "id": "properties",
        "aliases": [
          "Properties",
          "spring-boot-properties"
        ],
        "extensions": [
          ".properties"
        ]
      },
      {
        "id": "azcli",
        "extensions": [
          ".azcli"
        ]
      },
      {
        "id": "bats",
        "extensions": [
          ".bats"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Shell Tidy",
      "properties": {
        "shellFormatter.executablePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "markdownDescription": "Path to a `shfmt` executable. If set, Shell Tidy will use this binary instead of auto-downloading."
        },
        "shellFormatter.autoDownload": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically download a managed `shfmt` binary into VS Code global storage when no `shfmt` is found on PATH and `shellFormatter.executablePath` is not set."
        },
        "shellFormatter.shfmt.version": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "markdownDescription": "Override the managed `shfmt` version (e.g. `3.12.0`). If null, the extension's built-in version is used."
        },
        "shellFormatter.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Extra arguments passed to `shfmt`."
        },
        "shellFormatter.enabledLanguages": {
          "type": "array",
          "default": [
            "shellscript",
            "dockerfile",
            "dotenv",
            "ignore",
            "hosts",
            "jvmoptions",
            "properties",
            "spring-boot-properties",
            "azcli",
            "bats"
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Language IDs for which Shell Tidy registers a formatter."
        },
        "shellFormatter.logLevel": {
          "type": "string",
          "enum": [
            "info",
            "debug"
          ],
          "default": "info",
          "markdownDescription": "Controls how much Shell Tidy logs to the Output panel."
        }
      }
    }
  },
  "vsce": {
    "dependencies": false,
    "skipLicense": true
  },
  "author": {
    "email": "whoeverimf5@gmail.com",
    "name": "Ryo5",
    "url": "https://github.com/xqvvu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xqvvu/shell-tidy-vscode",
    "directory": "shell-tidy-vscode"
  },
  "homepage": "https://github.com/xqvvu/shell-tidy-vscode#readme",
  "readme": "https://github.com/xqvvu/shell-tidy-vscode#readme",
  "bugs": "https://github.com/xqvvu/shell-tidy-vscode/issues",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=22",
    "pnpm": "10.x",
    "vscode": "^1.109.0"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "check:biome": "biome check --no-errors-on-unmatched --write .",
    "check:types": "tsc --noEmit",
    "prepackage": "pnpm run -s check:types && pnpm run -s build",
    "package": "vsce package --out shell-tidy.vsix",
    "postinstall": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "3.7.1",
    "lefthook": "^2.1.1",
    "ovsx": "0.10.9",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
